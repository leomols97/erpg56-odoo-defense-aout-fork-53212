<odoo>

    <!-- Form view-->
    <record id="base.view_partner_form" model="ir.ui.view">
        <field name="priority">15</field>
        <field name="name">Livre des auteurs Formulaire</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="group_top">
                        <group name="group_left">
                            <field name="name"></field>
                            <field name="phone"></field>
                            <field name="email"></field>
                            <field name="isAuthor"></field>
                        </group>
                        <group name="group_right">
                            <field name="city"></field>
                            <field name="country_id"></field>
                            <field name="company_id"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--  Graph view   -->


    <!--    Filter view    -->
    <record model="ir.ui.view" id="auteur_search_view">
        <field name="name">Filtre recherche</field>
        <field name="model">res.partner</field>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <search>
                <field name="isAuthor"/>
                <filter name="filter_without_autor" string="Auteur" domain="[('isAuthor', '=', True)]"/>
            </search>
        </field>
    </record>
</odoo>
