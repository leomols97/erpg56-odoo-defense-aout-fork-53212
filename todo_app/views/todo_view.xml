<odoo>
    <record model="ir.ui.view" id="task_form_view">
        <field name="name">Todo task form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form string="Todo Form">
                <header>
                    <button name="do_clear_done" type="object" string="Clear Done"/>
                </header>
                <sheet>
                    <group name="group-top-left">
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="is_done"/>
                    </group>
                    <group name="group-top-right">
                        <field name="date_deadline"/>
                        <field name="team_ids" widget="one2many_tags"/>
                        <field name="active" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="task_tree_view">
        <field name="name">Listes des tâches</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree string="Task tree" decoration-muted="is_done==True">
                <field name="name"/>
                <field name="date_deadline"/>
                <field name="is_done"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="course_search_view">
        <field name="name">Filtre recherche</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="user_id"/>
                <filter name="filter_not_done" string="Pas encore fini" domain="[('is_done','=',False)]"/>
                <filter name="filter_done" string="Déjà fini" domain="[('is_done','!=',False)]"/>
                <filter name="filter_done" string="Inactif" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

</odoo>